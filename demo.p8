--initial variables etc

function _init()
	
	bnp = false
	
	ticker = 0
	friction = .9
	gravity = 0.3

	sprites = {
		standing = 1,
		running = 3,
		falling = 17
	}
	
	plr = {
		x = 8,
		y = 104,
		w = 8,
		h = 8,
		dx = 0,
		dy = 0,
		max_dy = 3,
		sprite = sprites.standing,
		on_ground = true,
		face_r = true,
		j_left = 1,
		max_jump = 1
		}
end





