--animation functions

function sprite_update()
	ticker += 0.5
	
	if not plr.on_ground then
		plr.sprite = sprites.falling
	else
		
		if abs(plr.dx) > 0 then
			plr.sprite = sprites.running
			if plr.dx < 0 then
				plr.face_r = true
			else
				plr.face_r = false
			end
		else
			plr.sprite = sprites.standing
		end
		
		if ticker > 10 then
			if ticker < 20 then
				plr.sprite += 1
			else
				ticker = 0
			end
		end
		
	end
end

