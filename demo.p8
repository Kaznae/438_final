--draw and update

function _draw()
	--rectfill(0,0,128,128,0)
	cls()
	
	--palt(0,false)
	
	rectfill(0,0,128,128,1)
	
	map(0,0,0,0,16,16)
	
	spr(plr.sprite,plr.x,plr.y,1,1,plr.face_r)
	
	print("dx:"..plr.dx.." dy:"..plr.dy,16,16,7)
	
end

function _update()
	

	if btn(0) then
		if btn(5) then
			plr.dx-=.2
		end
		plr.dx-=.2
	end
	if btn(1) then
		if btn(5) then
			plr.dx+=.2
		end
		plr.dx +=.2
	end
	if btnp(2) then
		if plr.j_left > 0 then
			plr.on_ground = false
			plr.j_left -= 1
			plr.dy = -3
		end
	end
	
	physics_update()
	sprite_update()
	
end
